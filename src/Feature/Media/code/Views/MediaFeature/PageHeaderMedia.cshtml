@using Sitecore
@model Sitecore.Feature.Media.Models.MediaBackgroundRenderingModel

<header class="page-header @Model.CssClass" @Model.MediaAttribute>
  @if (Model.IsMedia && Model.MediaType.Equals("video"))
  {
    <video class="video-bg" loop autoplay muted>
      <source src="@Model.MediaUrl" type="@Model.MediaType/@Model.MediaFormat">
    </video>
  }
  @Html.Sitecore().Placeholder("page-header")
</header>
