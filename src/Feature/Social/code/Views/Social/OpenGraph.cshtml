@using Sitecore.Feature.Social
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Links
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
<meta property="og:title" content="@Html.Sitecore().Field(Templates.OpenGraph.Fields.Title.ToString(), @Model.Item)"/>
<meta property="og:image" content="@Model.Item.ImageUrl(Templates.OpenGraph.Fields.Image, new MediaUrlOptions
                                   {
                                     AbsolutePath = true
                                   })"/>
<meta property="og:description" content="@Html.Sitecore().Field(Templates.OpenGraph.Fields.Description.ToString(), @Model.Item)"/>
<meta property="og:url" content="@Model.Item.Url(new UrlOptions
                                 {
                                   AlwaysIncludeServerUrl = true
                                 })"/>