@model Sitecore.Feature.Search.Models.SearchSettings

<li class="dropdown search">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-search"></i>
  </a>
	<ul class="dropdown-menu dropdown-menu-wide">
		<li>
			<form action="@Model.SearchResultsUrl" class="dropdown-item-body">
				<div class="input-group">
					<input type="text" name="query" placeholder="@Model.SearchBoxTitle" value="" class="form-control" autocomplete="off"/>
					<span class="input-group-btn">
						<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
					</span>
				</div>
			</form>
		</li>
	</ul>
</li>