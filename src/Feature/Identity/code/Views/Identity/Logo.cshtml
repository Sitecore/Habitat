@using Sitecore.Feature.Identity
@using Sitecore.Feature.Identity.Repositories
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Links
@model Sitecore.Mvc.Presentation.RenderingModel


@{
  var identity = IdentityRepository.Get(Model.Item);
  if (identity == null)
  {
    return;
  }
  //TODO: Resolve context site from item (implement in Foundation.Multisite)
  var homeUrl = Sitecore.Context.Site?.GetStartItem()?.GetUrl() ?? "/";
}

<a class="navbar-brand" href="@homeUrl">
  <span class="logo">
    @Html.Sitecore().ImageField(Templates.Identity.Fields.Logo.ToString(), identity)
    <!-- TODO: add tagline field to logo, add .has-tagline to .logo <small class="tagline">Niteflight</small> -->
  </span>
</a>
