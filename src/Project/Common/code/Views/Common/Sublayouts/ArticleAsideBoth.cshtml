@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{ var useStaticPlaceholderNames = MainUtil.GetBool(Model.Rendering.Parameters[Sitecore.Habitat.Website.Constants.LayoutParameters.UseStaticPlaceholderNames], false); }
<div class="container@(MainUtil.GetBool(Model.Rendering.Parameters[Sitecore.Habitat.Website.Constants.LayoutParameters.IsFluid], false) ? "-fluid" : "" )">
  <div class="row">
    <div class="col-lg-3">
      <aside>
        @Html.Sitecore().DynamicPlaceholder("col-narrow-1", useStaticPlaceholderNames)
      </aside>
    </div>
    <div class="col-lg-6">
      <article>
        @Html.Sitecore().DynamicPlaceholder("col-wide-1", useStaticPlaceholderNames)
      </article>
    </div>
    <div class="col-lg-3">
      <aside>
        @Html.Sitecore().DynamicPlaceholder("col-narrow-2", useStaticPlaceholderNames)
      </aside>
    </div>
  </div>
</div>