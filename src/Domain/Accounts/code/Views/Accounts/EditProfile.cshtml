@using System.Web.Mvc.Html
@using Habitat.Accounts.Texts
@using Habitat.Framework.SitecoreExtensions.HtmlHelpers
@using Sitecore.Mvc.Configuration
@model Habitat.Accounts.Models.EditProfile

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post))
{
    @Html.Sitecore().FormHandler()
    <div class="form-group @Html.ValidationErrorFor(x => x.FirstName, "has-error")">
        @Html.LabelFor(x => x.FirstName, new {@class = "control-label"})

        @Html.ValidationMessageFor(x => x.FirstName, "", new {@class = "help-block"})

        @Html.TextBoxFor(x => x.FirstName, new {@class = "form-control", id = "firstName"})
    </div>

    <div class="form-group @Html.ValidationErrorFor(x => x.LastName, "has-error")">
        @Html.LabelFor(x => x.LastName, new {@class = "control-label"})

        @Html.ValidationMessageFor(x => x.LastName, "", new {@class = "help-block"})

        @Html.TextBoxFor(x => x.LastName, new {@class = "form-control", id = "lastName"})
    </div>

    <div class="form-group @Html.ValidationErrorFor(x => x.PhoneNumber, "has-error")">
        @Html.LabelFor(x => x.PhoneNumber, new {@class = "control-label"})

        @Html.ValidationMessageFor(x => x.PhoneNumber, "", new {@class = "help-block"})

        @Html.TextBoxFor(x => x.PhoneNumber, new {@class = "form-control", id = "phoneNumber"})
    </div>

    <div class="form-group @Html.ValidationErrorFor(x => x.LastName, "has-error")">
        @Html.LabelFor(x => x.LastName, new {@class = "control-label"})

        @Html.ValidationMessageFor(x => x.LastName, "", new {@class = "help-block"})

        @Html.DropDownListFor(x=>x.Interest,new SelectList(Model.InterestTypes),Model.Interest, new { @class ="form-control", id = "interests"})
    </div>

    <input type="submit" class="btn btn-default" value="@Captions.Update" />
}