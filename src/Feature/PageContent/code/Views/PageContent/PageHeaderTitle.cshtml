@using Sitecore.Feature.PageContent
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel

@{
  var section = Model.Item.GetAncestorOrSelfOfTemplate(Templates.HasPageContent.ID);
  if (section == null)
  {
    return;
  }
}

<div class="container m-b-1">
  <h1>
    @Html.Sitecore().Field(Templates.HasPageContent.Fields.Title.ToString(), @section)
    @if (section.Fields[Templates.HasPageContent.Fields.Summary].HasValue || Sitecore.Context.PageMode.IsExperienceEditor)
    {
      <br/>
      <small>
        @Html.Sitecore().Field(Templates.HasPageContent.Fields.Summary.ToString(), @section)
      </small>   
    }
  </h1>
</div>