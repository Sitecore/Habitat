@using Sitecore.Feature.Search.Text
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@model Sitecore.Foundation.Indexing.Models.ISearchResults

<ul class="list-unstyled list-divided">
  @foreach (var result in Model.Results)
  {
    <li>
      @if (result.ViewName != null)
      {
        @Html.Partial(result.ViewName, result);
      }
      else
      {
        <h2>
          <a href="@result.Url">@Html.Raw(result.Title)</a>
        </h2>

        if (!string.IsNullOrWhiteSpace(result.Description))
        {
          @Html.Raw(result.Description)
        }
        <p>
          <span class="label label-info">@result.ContentType</span>
        </p>
      }
    </li>
  }
</ul>