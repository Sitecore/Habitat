@using Habitat.Framework.SitecoreExtensions.Extensions
@using Sitecore
@model Sitecore.Mvc.Presentation.RenderingModel
@{ var useStaticPlaceholderNames = MainUtil.GetBool(Model.Rendering.Parameters[Habitat.Website.Constants.LayoutParameters.UseStaticPlaceholderNames], false); }
<div class="container@(MainUtil.GetBool(Model.Rendering.Parameters[Habitat.Website.Constants.LayoutParameters.IsFluid], false) ? "-fluid" : "" )">
  <div class="row">
    <div class="col-lg-6 col-md-12">
      @Html.Sitecore().DynamicPlaceholder("col-wide-1", useStaticPlaceholderNames)
    </div>
    <div class="col-lg-3 col-sm-6">
      @Html.Sitecore().DynamicPlaceholder("col-narrow-1", useStaticPlaceholderNames)
    </div>
    <div class="col-lg-3 col-sm-6">
      @Html.Sitecore().DynamicPlaceholder("col-narrow-2", useStaticPlaceholderNames)
    </div>
  </div>
</div>