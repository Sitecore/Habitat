@using Habitat.Accounts.Texts
@using Habitat.Framework.SitecoreExtensions.HtmlHelpers
@using Sitecore.Mvc.Configuration
@model Habitat.Accounts.Models.PasswordResetInfo

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post))
{
  @Html.Sitecore().FormHandler()
  <div class="form-group @Html.ValidationErrorFor(x => x.Email, "has-error")">
    @Html.LabelFor(x => x.Email, new
    {
      @class = "control-label"
    })

    @Html.ValidationMessageFor(x => x.Email, "", new
    {
      @class = "help-block"
    })

    @Html.TextBoxFor(x => x.Email, new
    {
      @class = "form-control",
      id = "registerEmail"
    })
  </div>

  <input type="submit" class="btn btn-default" value="@Captions.ResetPassword"/>
  <div class="help-block">@Captions.ResetPasswordInfo</div>
}